<script>
/* ---------- BACKEND DATA (SIMULATED) ---------- */

// Toggle external images ON / OFF
const USE_EXTERNAL_IMAGES = true;

// Image sources (both routes)
const imageSources = {
  official: [
    {
      url: "https://villaggios-pizzeria.com/images/hero.jpg",
      alt: "Villaggio’s Pizzeria storefront"
    },
    {
      url: "https://villaggios-pizzeria.com/images/pizza.jpg",
      alt: "Fresh pizza from Villaggio’s"
    }
  ],
  external: [
    {
      url: "https://s3-media0.fl.yelpcdn.com/bphoto/example.jpg",
      alt: "Villaggio’s pizza from Yelp"
    },
    {
      url: "https://media-cdn.tripadvisor.com/media/photo-o/example.jpg",
      alt: "Dining area from TripAdvisor"
    }
  ]
};

// Menu data
const menuData = {
  pizzas: [
    { name: "Cheese Pizza", price: "$12.99" },
    { name: "Pepperoni Pizza", price: "$14.99" },
    { name: "Supreme Pizza", price: "$17.99" }
  ],
  sides: [
    { name: "Garlic Knots", price: "$5.99" },
    { name: "Caesar Salad", price: "$7.99" }
  ]
};

/* ---------- RENDER FUNCTIONS ---------- */

// Hero image
const hero = document.getElementById("hero");
const heroImg = document.createElement("img");
heroImg.src = imageSources.official[0].url;
heroImg.alt = imageSources.official[0].alt;
hero.appendChild(heroImg);

// Menu rendering
const menuList = document.getElementById("menuList");
[...menuData.pizzas, ...menuData.sides].forEach(item => {
  const div = document.createElement("div");
  div.className = "menu-item";
  div.innerHTML = `<span>${item.name}</span><span>${item.price}</span>`;
  menuList.appendChild(div);
});

// Gallery rendering (both routes)
const galleryGrid = document.getElementById("galleryGrid");
const galleryImages = USE_EXTERNAL_IMAGES
  ? [...imageSources.official, ...imageSources.external]
  : imageSources.official;

galleryImages.forEach(imgData => {
  const img = document.createElement("img");
  img.src = imgData.url;
  img.alt = imgData.alt;
  galleryGrid.appendChild(img);
});

// Contact mock
function sendMessage() {
  alert("Message sent! (Demo)");
}
</script>

